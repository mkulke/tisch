extends layout

block content
  .navbar.navbar-inverse.navbar-static-top(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Project name
      .navbar-collapse.collapse
        ul.nav.navbar-nav
          li.active
            a(href='#') Home
          li
            a(href='#about') About
          li
            a(href='#contact') Contact
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              | Dropdown
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(href='#') Action
              li
                a(href='#') Another action
              li
                a(href='#') Something else here
              li.divider
              li.dropdown-header Nav header
              li
                a(href='#') Separated link
              li
                a(href='#') One more separated link
        ul.nav.navbar-nav.navbar-right
          li
            a(href='../navbar/') Default
          li.active
            a(href='./') Static top
          li
            a(href='../navbar-fixed-top/') Fixed top
  .container
    .jumbotron
      form.form-horizontal
        fieldset
          legend Legend
          .form-group
            label(for="inputSummary").col-lg-2.control-label Summary
            .col-lg-10
              input(type="text", placeholder="Summary", data-bind="textInput: summary").form-control#inputSummary
          .form-group
            label(for="textAreaDescription").col-lg-2.control-label Description
            .col-lg-10
              .form-control-wrapper
                textarea(rows="3", data-bind="textInput: description").form-control.empty#textAreaDescription
              span.help-block Add the task description here.


