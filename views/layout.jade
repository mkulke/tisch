doctype html
html
  include header
  body
    .navbar.navbar-inverse.navbar-static-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Project name
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') Home
            li
              a(href='#about') About
            li
              a(href='#contact') Contact
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | Dropdown
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='#') Action
                li
                  a(href='#') Another action
                li
                  a(href='#') Something else here
                li.divider
                li.dropdown-header Nav header
                li
                  a(href='#') Separated link
                li
                  a(href='#') One more separated link
          ul.nav.navbar-nav.navbar-right
            li
              a(href='../navbar/') Default
            li.active
              a(href='./') Static top
            li
              a(href='../navbar-fixed-top/') Fixed top
    div(tabindex='-1', role='dialog', data-bind='with: error').modal.fade#error-modal
      .modal-dialog
        .modal-content
          .modal-header.alert-danger
            h4(data-bind='text: title').modal-title
          div(data-bind='text: message').modal-body
          .modal-footer
            button(type='button', data-dismiss='modal').btn.btn-primary Close
    block content
    script(src="/knockout/dist/knockout.js")
    script(src="knockout-mapping/build/output/knockout.mapping-latest.js")
    script(src="/jquery/dist/jquery.min.js")
    script(src="/underscore/underscore-min.js")
    script(src="/underscore-contrib/dist/underscore-contrib.min.js")
    script(src="/bootstrap/dist/js/bootstrap.min.js")
    script(src="/task.js")